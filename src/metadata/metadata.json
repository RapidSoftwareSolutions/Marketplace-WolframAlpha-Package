{
  "package": "WolframAlpha",
  "tagline": "WolframAlpha Full API",
  "description": "Get search results from this computational knowledge engine",
  "image": "https://logo.clearbit.com/wolframalpha.com",
  "repo": "https://github.com/RapidSoftwareSolutions/Marketplace-WolframAlpha-Package",
  "keywords": [
    "AI",
    "API",
    "artificial",
    "engine",
    "intelligence",
    "knowledge",
    "search"
  ],
  "accounts": {
    "domain": "wolframalpha.com",
    "credentials": [
      "apiKey"
    ]
  },
  "blocks": [
    {
      "name": "createQuery",
      "description": "Create a query for Wolfram|Alpha",
      "args": [
        {
          "name": "apiKey",
          "type": "credentials",
          "info": "Application key",
          "required": true
        },
        {
          "name": "input",
          "type": "String",
          "info": "Search expression",
          "required": true
        },
        {
          "name": "format",
          "type": "Select",
          "option": ["image", "imagemap", "plaintext", "minput", "moutput", "cell", "mathml", "sound", "wav"],
          "info": "The desired format for individual result pods. image, imagemap, plaintext, minput, moutput, cell, mathml, sound, wav",
          "required": false
        },
        {
          "name": "includePodId",
          "type": "String",
          "info": "Return only one pod by its ID",
          "required": false
        },
        {
          "name": "excludePodId",
          "type": "String",
          "info": "Return all pods except one by its ID",
          "required": false
        },
        {
          "name": "podTitle",
          "type": "List",
          "info": "Selecting Pods by Title",
          "required": false,
          "structure": {
            "name": "pod",
            "type": "String",
            "info": "Pod title"
          }
        },
        {
          "name": "podIndex",
          "type": "List",
          "info": "Selecting Pods by Index",
          "required": false,
          "structure": {
            "name": "pod",
            "type": "String",
            "info": "Pod index"
          }
        },
        {
          "name": "scanner",
          "type": "List",
          "info": "Selecting Pods by Scanner",
          "required": false,
          "structure": {
            "name": "scanner",
            "type": "String",
            "info": "Pod"
          }
        }
      ],
      "callbacks": [
        {
          "name": "error",
          "info": "Error"
        },
        {
          "name": "success",
          "info": "Success"
        }
      ]
    }
  ]
}